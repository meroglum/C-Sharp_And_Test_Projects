                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       Margin="10,0,10,-19"/>
            </ui:SimpleStackPanel>
            <TextBox HorizontalAlignment="Left"
                     TextWrapping="Wrap"
                     Text="" 
                     VerticalAlignment="Top"
                     Width="300"
                     Name="txtUsername"
                         Margin="10,0,10,0"
                     />
            <StatusBar>

            </StatusBar>
            <ui:SimpleStackPanel>
                <TextBlock Text=""
                       HorizontalAlignment="Right"
                       Margin="0,0,10,-16"
                       Name="lblPasswordError"
                       Foreground="Red"/>
                <TextBlock Text="Şifre"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom"
                       Margin="10,0,0,-19"/>
            </ui:SimpleStackPanel>
            <PasswordBox HorizontalAlignment="Left"
                         VerticalAlignment="Top" 
                         Width="300"
                         Name="txtPassword"
                             Margin="10,0,10,0"
                     />
            <ui:SimpleStackPanel>
                <TextBlock Text=""
                       HorizontalAlignment="Center"
                       Name="lblLoginError"
                       Foreground="Red"/>
                <Button Content="Giriş Yap"
                    Style="{StaticResource AccentButtonStyle}"
                    HorizontalAlignment="Center"
                    Name="btnSignIn"
                    Margin="20"/>
